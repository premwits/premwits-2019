service cloud.firestore {
  match /databases/{database}/documents {
    match /game/{prop} {
    	allow read: if true;
      allow write: if request.auth.uid != null;
    }
    match /stats/{stat} {
    	allow read,write: if request.auth.uid != null;
    }
    match /logs/{log} {
    	allow read: if request.auth.uid != null;
      allow write: if false;
    }
  }
}